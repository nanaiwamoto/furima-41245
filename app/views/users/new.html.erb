<%= form_with model: @user, local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.uniq.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nickname %>
    <%= form.text_field :nickname, value: @user.nickname %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, value: @user.email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name, value: @user.last_name %>
  </div>

  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name, value: @user.first_name %>
  </div>

  <div>
    <%= form.label :last_name_kana %>
    <%= form.text_field :last_name_kana, value: @user.last_name_kana %>
  </div>

  <div>
    <%= form.label :first_name_kana %>
    <%= form.text_field :first_name_kana, value: @user.first_name_kana %>
  </div>

  <div>
    <%= form.label :birth_date %>
    <%= form.date_select :birth_date, start_year: 1900, end_year: Time.current.year %>
  </div>

  <div>
    <%= form.submit "登録する" %>
  </div>
<% end %>